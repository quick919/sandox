<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<form method="POST" action="">
<textarea id="textarea" name="form">
</textarea>
<input id="submit" type="submit" value="submit">
</form>

<main id="result">
  <%= erb :article %>
</main>

<script type="text/javascript">
$(function() {
  $('form').submit(function(e) {
    e.preventDefault();
    var requrest = $.ajax({
      type: "POST",
      url: "/form",
      dataType: "text",
      data: { form: $('#textarea').val() }
    });
    
    requrest.done(function(data) {
      jQuery('#result').html(data);
      $('#textarea').val('');
    }).fail(function(e) {
      console.log('error');
    });
  });
});

function deleteItem(id) {
  var requrest = $.ajax({
      type: "POST",
      url: "/item/delete",
      dataType: "text",
      data: { id: id }
    });
    
    requrest.done(function(data) {
      jQuery('#result').html(data);
    }).fail(function(e) {
      console.log('error');
    });
}
</script>
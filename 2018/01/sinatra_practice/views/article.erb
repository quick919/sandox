<% @articles.each do |item| %>
  <article>
    <div class="article-box">
    <header>
      <p>
        <%= item[:create_date].strftime("%Y/%m/%d %H:%M:%S.%L") %>
        <input type="button" class="btn" value="edit" onClick="editItem('<%= item[:article_id] %>','<%= item[:text] %>')">
        <input type="button" class="btn" value="delete" onClick="deleteItem('<%= item[:article_id] %>')">  
      </p>
    </header>
    <pre><span class="article"><%= item[:text] %></span></pre>
    <% id = item[:article_id] %>
    <% unless @merged_tag[id].nil? %>
      <% @merged_tag[id].each do |tag| %>
      <span class="tag"><%= tag %></span>
      <% end %>
    <% end %> 
    </div>
  </article>
<% end %>

<div id="modal" class="modal">
  <div id="modalContent" class="modal_content">
<textarea id="editText"></textarea>
    <input id="editBtn" type="button" value="ok">
    <input id="cancelBtn" type="button" value="cancel">
  </div>
</div>